{
  "name": "msgraph-tool-agent-8b",
  "image": "nvcr.io/nvidia/pytorch:24.12-py3",
  "runArgs": [
    "--gpus", "all",
    "--shm-size=16g"
  ],
  "containerEnv": {
    "PIP_ROOT_USER_ACTION": "ignore"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "njpwerner.autodocstring"
      ]
    }
  },
  "postCreateCommand": "rm -rf /usr/local/lib/python3.12/dist-packages/*.egg && pip install 'transformers>=4.40.0,<4.46.0' && pip install -e '.[dev]'",
  "remoteUser": "root"
}
