{
  "name": "NVIDIA PyTorch LLM Studio",
  "image": "nvcr.io/nvidia/pytorch:25.11-py3",
  "runArgs": [
    "--gpus", "all",
    "--shm-size=16g"
  ],
  
  // 1. ADD THIS BLOCK HERE
  "containerEnv": {
    "PIP_ROOT_USER_ACTION": "ignore"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "njpwerner.autodocstring"
      ]
    }
  },
  
  // 2. ALTERNATIVE: You can also add the flag here, but containerEnv is cleaner
  "postCreateCommand": "pip install -r requirements.txt",
  
  "remoteUser": "root"
}